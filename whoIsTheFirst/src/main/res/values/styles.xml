<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorDarkPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

    </style>

    <style name="AppTheme" parent="MyAppTheme" />

    <style name="MultiTouchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MyMultiTouchTheme" parent="MultiTouchTheme" />

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorTextOnDark</item>
    </style>

    <style name="StatisticsTheme.Text" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="StatisticsTheme.Group" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AboutTheme" parent="AppTheme">
        <item name="android:textColorLink">@color/colorText</item>
        <item name="android:textSize">@dimen/text_about_size</item>
        <item name="android:layout_margin">20dp</item>
    </style>


    <style name="MainDescriptionText">
        <item name="android:textColor">@color/colorTextOnDark</item>
        <item name="android:textSize">@dimen/text_about_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OptionDescriptionText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_description_one_of_size</item>
    </style>

    <style name="MainButton">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:padding">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextOnDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
